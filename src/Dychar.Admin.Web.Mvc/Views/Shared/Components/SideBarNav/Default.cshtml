@using Abp.Collections.Extensions
@using Dychar.Admin.Web.Views
@using Dychar.Admin.Web.Views.Shared.Components.SideBarNav
@model SideBarNavViewModel
@{
    var calculateMenuUrl = new Func<string, string>((url) =>
    {
        if (string.IsNullOrEmpty(url))
        {
            return ApplicationPath;
        }

        if (UrlChecker.IsRooted(url))
        {
            return url;
        }

        return ApplicationPath + url;
    });
}
<aside class="main-sidebar">
    <section class="sidebar">
        <ul class="sidebar-menu" data-widget="tree">
            @for (var i = 0; i < Model.MainMenu.Items.Count; i++)
            {
                var menuItem = Model.MainMenu.Items[i];
                @Html.Partial("Components/SideBarNav/_UserMenuItem", new UserMenuItemViewModel
           {
               MenuItem = menuItem,
               MenuItemIndex = i,
               RootLevel = true,
               ActiveMenuItemName = Model.ActiveMenuItemName
           })
            }
        </ul>
    </section>
</aside>
